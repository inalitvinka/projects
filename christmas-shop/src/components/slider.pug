    .slider.container.section
        p.slider-caption become happier!
        h3.slider-title in the new 2025
        .slider-wrapper#slider-wrapper
          .slider-content#slider
            p.slider-text live  
            img.slider-img(src=require("../assets/images/snowman.png"), alt="snowman")
            p.slider-text create  
            img.slider-img(src=require("../assets/images/christmas-trees.png"), alt="christmas-trees")
            p.slider-text love  
            img.slider-img(src=require("../assets/images/christmas-tree-ball.png"), alt="christmas-tree-ball")
            p.slider-text dream 
            img.slider-img(src=require("../assets/images/fairytale-house.png"), alt="fairytale-house")
